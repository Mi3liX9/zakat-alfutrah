---
import MyLink from "../components/MyLink.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body class="wallpaper">
    <header>
      <img src="/header.jpg" class="mb-4 h-96 w-full object-cover object-top rounded-b-3xl shadow-lg" />
      <nav class="flex justify-around p-4">
        <MyLink href="calc">زكاة الفطرة</MyLink>
        <MyLink href="info">مسائل</MyLink>
      </nav>
    </header>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "co";
    src: url(/font.otf);
  }

  :root {
    font-family: co;
  }

  .wallpaper {
    background: url("/wallpaper.jpg");
    background-attachment: fixed;
    background-position: bottom;
    background-repeat: no-repeat;
  }
</style>
